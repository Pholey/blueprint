{
    "extends": "../../config/tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "lib": [
            "dom",
            "es2015.core",
            "es2015.collection",
            "es2015.generator",
            "es2015.iterable",
            "es2015.promise",
            "es2015.reflect",
            "es2015.symbol",
            "es5"
        ],
        "outDir": "dist/",
        "paths": {
            "@blueprintjs/*": ["node_modules/@blueprintjs/*"]
        }
    },
    "include": [
        "typings/tsd.d.ts",
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build",
        "test"
    ]
}
