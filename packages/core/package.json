{
  "name": "@blueprintjs/core",
  "version": "1.32.0",
  "description": "Core styles & components",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "style": "dist/blueprint.css",
  "unpkg": "dist/core.bundle.js",
  "scripts": {
    "build": "npm-run-all -p 'build:*'",
    "build:typescript": "tsc -p ./",
    "build:sass": "node-sass --importer ../../node_modules/node-sass-package-importer/dist/cli.js --recursive src --output dist/ --source-map true",
    "clean": "rm -rf dist/*",
    "dev": "npm-run-all -p 'build:typescript --watch' 'build:sass --watch'",
    "lint": "npm-run-all -p lint:stylelint lint:tslint",
    "lint:stylelint": "stylelint -s scss 'src/**/*.scss'",
    "lint:tslint": "tslint '{src,test}/**/*.{ts,tsx}' -c ../../tslint.json",
    "lint-fix": "yarn lint:tslint --fix",
    "test": "karma"
  },
  "dependencies": {
    "@types/dom4": "^1.5.20",
    "@types/tether": "^1.1.27",
    "classnames": "^2.2",
    "dom4": "^1.8",
    "normalize.css": "4.1.1",
    "pure-render-decorator": "^1.1",
    "tether": "^1.4",
    "tslib": "^1.5.0"
  },
  "peerDependencies": {
    "react": "^16.0.0 || ^15.0.1 || ^0.14",
    "react-addons-css-transition-group": "^15.0.1 || ^0.14",
    "react-dom": "^16.0.0 || ^15.0.1 || ^0.14"
  },
  "devDependencies": {
    "bourbon": "^4.3.4",
    "karma": "^1.7.1",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "react": "^15.6.1",
    "react-addons-css-transition-group": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-test-renderer": "^15.6.1"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:palantir/blueprint.git"
  },
  "keywords": [
    "palantir",
    "blueprint",
    "components",
    "styles",
    "theme",
    "ui"
  ],
  "author": "Palantir Technologies",
  "license": "Apache-2.0"
}
